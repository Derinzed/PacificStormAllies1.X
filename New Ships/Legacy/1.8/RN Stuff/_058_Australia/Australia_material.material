material Australia_Flag
{
    technique
    {
        pass
        {
            ambient 1.0 1.0 1.0
            scene_blend alpha_blend

            cull_hardware none
            cull_software none

            texture_unit
            {
		anim_texture flag_au-navy1.png flag_au-navy2.png flag_au-navy3.png flag_au-navy4.png flag_au-navy5.png flag_au-navy6.png flag_au-navy7.png flag_au-navy8.png 0.5

		filtering trilinear
		alpha_rejection greater_equal 128
            }
        }
    }
}



