material Hiei_Rails_mat4
{
    technique
    {
        pass
        {
            ambient 1.0 1.0 1.0

            cull_hardware none
            cull_software none

            texture_unit
            {
                texture Hiei_tex2_Rails.dds
    filtering trilinear

                alpha_rejection greater_equal 325
            }
        }
    }
}


